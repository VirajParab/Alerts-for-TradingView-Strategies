{
  "name": "Sound Alerts for TradingView Strategy",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "You can program sound alerts for tradingview strategies",
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-48.png"
  },
  "background": {
    "scripts": ["background.js"],
	"persistent":false
  },
  "content_scripts": [
    {
      "matches": ["https://tradingview.com/*","https://www.tradingview.com/*"],
      "css": ["mystyle.css"],
      "js": ["myscript.js"]
    }
  ],
  "permissions": [
	"storage", "tabs", "https://tradingview.com/*" ,"https://www.tradingview.com/*"
  ]
}
